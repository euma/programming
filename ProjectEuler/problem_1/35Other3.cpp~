#include<iostream>
//using namespace std;

int main() {
    const int SIZE = 1000;
    int array[SIZE];
    int three, five;
    long sum = 0;

    for (int i = 1; i < SIZE; i++) {
	three = (i % 3 == 0);
	five = (i % 5 == 0);
	if (three || five) {
	    //std::cout << i << " ";
	    sum = sum + i;	// the key line of code
	}			//endif
    }				//endfor
    std::cout << "\n" << sum<<"\n";
    return 0;
}				//end main

[Event "Corus"]
[Site "Wijk aan Zee"]
[Date "2008.01.17"]
[Round "5"]
[White "Eljanov, Pavel"]
[Black "Radjabov, Teimour"]
[Result "0-1"]
[ECO "E70"]
[WhiteElo "2692"]
[BlackElo "2735"]
[Annotator "Marin,M"]
[PlyCount "66"]
[EventDate "2008.01.12"]
[EventType "tourn"]
[EventRounds "13"]
[EventCountry "NED"]
[EventCategory "20"]
[Source "ChessBase"]
